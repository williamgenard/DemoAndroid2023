<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nameFragment">

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.demoandroid.fragments.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_nameFragment_to_diplomaFragment"
            app:destination="@id/diplomaFragment" />
    </fragment>
    <fragment
        android:id="@+id/diplomaFragment"
        android:name="com.example.demoandroid.fragments.DiplomaFragment"
        android:label="fragment_diploma"
        tools:layout="@layout/fragment_diploma" >
        <action
            android:id="@+id/action_diplomaFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.example.demoandroid.fragments.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_recapFragment"
            app:destination="@id/recapFragment" />
    </fragment>
    <fragment
        android:id="@+id/recapFragment"
        android:name="com.example.demoandroid.fragments.RecapFragment"
        android:label="fragment_recap"
        tools:layout="@layout/fragment_recap" >
        <action
            android:id="@+id/action_recapFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>
</navigation>